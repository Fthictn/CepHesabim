<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragment.MontlyResultFragment"
    android:background="@drawable/graph_line_bg">

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barchart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/graph_line_bg"
        android:layout_marginBottom="80dp"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/averageRemaingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="12dp"
        android:src="@drawable/ic_baseline_format_align_justify_24"
        android:layout_above="@+id/averageOutComeButton"
        android:visibility="gone"
        app:fabCustomSize="60dp"
        app:fabSize="auto"
        android:layout_alignParentEnd="true" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/averageOutComeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="12dp"
        android:visibility="gone"
        android:layout_above="@+id/averageInComeButton"
        android:src="@drawable/ic_baseline_indeterminate_check_box_24"
        app:fabCustomSize="60dp"
        app:fabSize="auto"
        android:layout_alignParentEnd="true" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/averageInComeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/containerFabButton"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:layout_margin="12dp"
        android:src="@drawable/ic_baseline_add_circle_24"
        app:fabCustomSize="60dp"
        app:fabSize="auto"
        android:layout_alignParentRight="true" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/containerFabButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_baseline_arrow_upward_24"
        android:layout_alignParentEnd="true"
        app:fabCustomSize="60dp"
        app:fabSize="auto"
        android:layout_alignParentRight="true" />

</RelativeLayout>


